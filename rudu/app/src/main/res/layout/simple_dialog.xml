<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dimen300"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/simpledialogbg">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen13"
                android:text="温馨提示"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title2"
                android:paddingTop="@dimen/dimen15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen10"
                android:layout_marginStart="@dimen/dimen10"
                android:textColor="#383839"
                android:textSize="@dimen/dimen17"

                />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/dimen15"
                android:layout_marginEnd="@dimen/dimen12"
                android:layout_marginStart="@dimen/dimen12"
                android:scrollbars="vertical"
                android:textColor="#383839"
                android:textSize="@dimen/dimen17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_above="@+id/botttonContainer"
                android:background="#dad7d7" />

            <LinearLayout
                android:id="@+id/botttonContainer"
                android:layout_below="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen60"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textAlignment="center"
                    android:textColor="#4879f3"
                    android:textSize="@dimen/dimen20" />
                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:background="#dad7d7" />

                <TextView
                    android:id="@+id/sure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textAlignment="center"
                    android:textColor="#4879f3"
                    android:textSize="@dimen/dimen20" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
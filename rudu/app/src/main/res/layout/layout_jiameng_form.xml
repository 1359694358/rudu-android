<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingStart="@dimen/dimen10"
            android:paddingEnd="@dimen/dimen19"
            android:orientation="vertical"
            android:background="@drawable/simpledialogbg"
            android:layout_marginTop="@dimen/dimen14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:scaleType="centerCrop"
                    android:background="#FFE6E6E6"
                    app:layout_constraintTop_toTopOf="@+id/title"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/title"
                    android:layout_width="@dimen/dimen73"
                    android:layout_marginEnd="@dimen/dimen10"
                    android:layout_height="@dimen/dimen1"/>

                <View
                    android:scaleType="centerCrop"
                    android:background="#FFE6E6E6"
                    app:layout_constraintTop_toTopOf="@+id/title"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/title"
                    android:layout_width="@dimen/dimen73"
                    android:layout_marginStart="@dimen/dimen10"
                    android:layout_height="@dimen/dimen1"/>
                <TextView
                    android:id="@+id/title"
                    android:drawablePadding="@dimen/dimen4"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/dimen14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="联系及合作"
                    android:textColor="#343434"
                    android:textSize="@dimen/dimen14"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_marginTop="@dimen/dimen10"
                android:background="#DCDCDC"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                android:drawablePadding="@dimen/dimen6"
                android:includeFontPadding="false"
                android:drawableStart="@mipmap/jiameng_icon"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家地址"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor"
                android:id="@+id/shangjiadizhi"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen10"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写商家地址"
                android:textColorHint="#ff9a9a9a"
                android:background="@android:color/white"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <View
                android:background="#DCDCDC"
                android:layout_width="match_parent"
                android:layout_height="1px" />


            <TextView
                android:drawablePadding="@dimen/dimen6"
                android:includeFontPadding="false"
                android:drawableStart="@mipmap/gongzuoleixing_icon"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家类型"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor"
                android:id="@+id/type"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen10"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写商家类型"
                android:textColorHint="#ff9a9a9a"
                android:background="@android:color/white"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <View
                android:background="#DCDCDC"
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                android:drawablePadding="@dimen/dimen6"
                android:includeFontPadding="false"
                android:drawableStart="@mipmap/shop_type"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家名称"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <EditText
                android:id="@+id/shopName"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:background="@android:color/white"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen10"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写商家名称"
                android:textColor="#ff343434"
                android:textColorHint="#ff9a9a9a"
                android:textSize="@dimen/dimen12" />

            <View
                android:background="#DCDCDC"
                android:layout_width="match_parent"
                android:layout_height="1px" />


            <TextView
                android:drawablePadding="@dimen/dimen6"
                android:includeFontPadding="false"
                android:drawableStart="@mipmap/shouji_icon"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="#ff343434"
                android:textSize="@dimen/dimen12" />

            <EditText
                android:textCursorDrawable="@drawable/edit_cursor"
                android:digits="0123456789"
                android:maxLines="1"
                android:maxLength="11"
                android:inputType="number"
                android:id="@+id/phone"
                android:background="@android:color/white"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen10"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写联系电话"
                android:textColor="#ff343434"
                android:textColorHint="#ff9a9a9a"
                android:textSize="@dimen/dimen12" />

            <View
                android:layout_marginBottom="@dimen/dimen16"
                android:background="#DCDCDC"
                android:layout_width="match_parent"
                android:layout_height="1px" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dimen9"
            android:layout_marginStart="@dimen/dimen12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*填写以上信息，三个工作日内获得反馈"
            android:textColor="#ff343434"
            android:textSize="@dimen/dimen10" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:text="立即合作"
            android:id="@+id/submit"
            app:qmui_radius="@dimen/dimen5"
            android:layout_marginTop="@dimen/dimen15"
            android:layout_marginBottom="@dimen/dimen15"
            app:qmui_borderColor="@android:color/transparent"
            app:qmui_backgroundColor="#047BE4"
            android:paddingTop="@dimen/dimen13"
            android:paddingBottom="@dimen/dimen13"
            android:textSize="@dimen/dimen14"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
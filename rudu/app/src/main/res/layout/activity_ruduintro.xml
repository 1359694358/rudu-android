<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="intro"
            type="com.rd.rudu.bean.result.JoinIntroInfoResultBean.JoinIntroInfoListData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            app:layout_constraintTop_toTopOf="parent"
            android:id="@id/toolbarBindingView" layout="@layout/app_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <ScrollView
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/toolbarBindingView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    url="@{intro.topPic}"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ruduintrobanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen16"
                    android:background="@drawable/simpledialogbg"
                    android:paddingBottom="@dimen/dimen14"
                    android:layout_height="wrap_content">
                    <TextView
                        android:includeFontPadding="false"
                        android:id="@+id/zhaoshangjiameng"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen19"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{intro.moduleAboutTitle}"
                        android:textStyle="bold"
                        android:textColor="#ff343434"
                        android:textSize="@dimen/dimen14"
                        />
                    <View
                        android:id="@+id/line"
                        android:background="#DCDCDC"
                        android:layout_marginEnd="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen9"
                        app:layout_constraintTop_toBottomOf="@+id/zhaoshangjiameng"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/zhaoshangjiameng"
                        android:layout_width="0dp"
                        android:layout_height="1px"/>
                    <TextView
                        android:id="@+id/introSummary"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/line"
                        app:layout_constraintStart_toStartOf="@+id/line"
                        app:layout_constraintEnd_toStartOf="@+id/introRightLogo"
                        android:layout_width="0dp"
                        android:layout_marginEnd="@dimen/dimen13"
                        android:layout_marginTop="@dimen/dimen9"
                        android:layout_height="wrap_content"
                        android:text="@{intro.moduleAboutDesc}"
                        android:textColor="#ff9a9a9a"
                        android:textSize="@dimen/dimen12"
                        />
                    <ImageView
                        url="@{intro.moduleAboutPic}"
                        android:layout_marginEnd="@dimen/dimen10"
                        android:id="@+id/introRightLogo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line"
                        android:src="@mipmap/ruduintro_rightlogo"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_width="@dimen/dimen157"
                        android:layout_height="@dimen/dimen127"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen16"
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:background="@drawable/simpledialogbg"
                    android:paddingBottom="@dimen/dimen14"
                    android:layout_height="wrap_content">
                    <TextView
                        android:includeFontPadding="false"
                        android:id="@+id/teamTitle"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen19"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精英团队"
                        android:textColor="#ff343434"
                        android:textSize="@dimen/dimen14"
                        />
                    <View
                        android:id="@+id/teamLine"
                        android:background="#DCDCDC"
                        android:layout_marginEnd="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen9"
                        app:layout_constraintTop_toBottomOf="@+id/teamTitle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/teamTitle"
                        android:layout_width="0dp"
                        android:layout_height="1px"/>
                    <HorizontalScrollView
                        android:id="@+id/teamParter"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@+id/teamLine"
                        app:layout_constraintStart_toStartOf="@+id/teamLine"
                        app:layout_constraintEnd_toEndOf="@+id/teamLine"
                        android:layout_width="0dp"
                        android:layout_marginTop="@dimen/dimen9"
                        android:layout_height="@dimen/dimen125"
                        android:textColor="#ff9a9a9a"
                        android:textSize="@dimen/dimen12"
                        >
                        <LinearLayout
                            android:id="@+id/teamItems"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                           <!-- <include layout="@layout/layout_team_partner"/>
                            <include layout="@layout/layout_team_partner"/>
                            <include layout="@layout/layout_team_partner"/>
                            <include layout="@layout/layout_team_partner"/>-->
                        </LinearLayout>
                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen9"
                    android:layout_marginStart="@dimen/dimen14"
                    android:layout_marginEnd="@dimen/dimen14"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/jiameng_detail_itembg"
                        app:layout_constraintBottom_toBottomOf="@+id/merchantsIntro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:includeFontPadding="false"
                        android:id="@+id/youshi"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen19"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司优势"
                        android:textColor="#333333"
                        android:textSize="@dimen/dimen13"
                        />
                    <View
                        android:id="@+id/youshiLine"
                        android:background="#DCDCDC"
                        android:layout_marginEnd="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen9"
                        app:layout_constraintTop_toBottomOf="@+id/youshi"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/youshi"
                        android:layout_width="0dp"
                        android:layout_height="1px"/>
                    <LinearLayout
                        android:paddingBottom="@dimen/dimen9"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_marginEnd="@dimen/dimen9"
                        android:orientation="vertical"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="@+id/youshi"
                        app:layout_constraintTop_toBottomOf="@+id/youshiLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/merchantsIntro"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <include android:id="@+id/productLayout" layout="@layout/layout_mainproduct"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginStart="@dimen/dimen15"
                    android:paddingBottom="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/order_rectbg"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen14"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/contractus"
                        android:layout_marginStart="@dimen/dimen9"
                        android:layout_marginTop="@dimen/dimen13"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{intro.moduleContactTitle}"
                        android:textStyle="bold"
                        android:textColor="#343434"
                        android:textSize="@dimen/dimen13" />

                    <View
                        android:id="@+id/line4"
                        android:layout_margin="@dimen/dimen9"
                        app:layout_constraintTop_toBottomOf="@+id/contractus"
                        app:layout_constraintStart_toStartOf="@+id/contractus"
                        android:background="#E6E6E6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen1" />
                    <TextView
                        android:id="@+id/contractInfo"
                        app:layout_constraintStart_toStartOf="@+id/line4"
                        app:layout_constraintEnd_toEndOf="@+id/line4"
                        app:layout_constraintTop_toBottomOf="@+id/line4"
                        android:layout_marginTop="@dimen/dimen15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{@string/about_rudu_contract(intro.moduleContactPhone,intro.moduleContactMail,intro.moduleContactAddress)}"
                        android:textColor="#ff9a9a9a"
                        android:textSize="@dimen/dimen12"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="intro"
            type="com.rd.rudu.bean.result.JoinIntroInfoResultBean.JoinIntroInfoListData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/dimen7"
        android:paddingBottom="@dimen/dimen7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jianjie"
                android:layout_marginStart="@dimen/dimen9"
                android:layout_marginTop="@dimen/dimen13"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{intro.title}"
                android:textColor="#ff333333"
                android:textSize="15dp"
                />
            <View
                android:id="@+id/line"
                android:layout_margin="@dimen/dimen9"
                app:layout_constraintTop_toBottomOf="@+id/jianjie"
                app:layout_constraintStart_toStartOf="@+id/jianjie"
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen1"/>
            
            <androidx.cardview.widget.CardView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen14"
                android:id="@+id/logoContainer"
                android:layout_marginTop="@dimen/dimen9"
                app:cardCornerRadius="@dimen/dimen6"
                app:layout_constraintTop_toBottomOf="@+id/line"
                app:layout_constraintStart_toStartOf="@+id/line"
                android:layout_width="@dimen/dimen105"
                android:layout_height="@dimen/dimen86">
                <ImageView
                    url="@{intro.introDesc}"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/join_mall_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/logoContainer"
                app:layout_constraintTop_toTopOf="@+id/logoContainer"
                android:layout_marginStart="@dimen/dimen13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{intro.introTitle}"
                android:textColor="#ff333333"
                android:textSize="13dp"
                />
            <TextView
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_height="wrap_content"
                android:text="@{intro.introDesc}"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
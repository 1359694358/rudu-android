<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
         <variable
            name="data"
            type="com.rd.rudu.bean.result.JoinPartnerIntroResultBean.JoinPartnerIntro" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:scaleType="centerCrop"
            android:background="#FFE6E6E6"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/title"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/dimen15"
            android:layout_height="@dimen/dimen1"/>

        <View
            android:scaleType="centerCrop"
            android:background="#FFE6E6E6"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/title"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/dimen15"
            android:layout_height="@dimen/dimen1"/>
        <TextView
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:textColor="#ff333333"
            android:textSize="15dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dimen9"
            app:cardCornerRadius="@dimen/dimen6"
            android:id="@+id/imageContainer"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintDimensionRatio="h,332:97"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/image"
                url="@{data.bannerUrl}"
                android:src="@mipmap/city_partner_item"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_margin="@dimen/dimen10"
            android:elevation="@dimen/dimen20"
            app:layout_constraintStart_toStartOf="@+id/imageContainer"
            app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
            android:background="@mipmap/wenan_bg"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen10"
            android:paddingEnd="@dimen/dimen10"
            android:paddingTop="@dimen/dimen5"
            android:paddingBottom="@dimen/dimen7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:includeFontPadding="false"
                android:text="@{data.mainTitle}"
                android:textSize="@dimen/dimen15"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dimen4"
                android:includeFontPadding="false"
                android:text="@{data.subTitle}"
                android:textSize="@dimen/dimen10"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
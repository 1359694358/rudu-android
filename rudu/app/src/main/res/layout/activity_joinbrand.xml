<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            app:layout_constraintTop_toTopOf="parent"
            android:id="@id/toolbarBindingView" layout="@layout/app_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        <ScrollView
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@id/toolbarBindingView"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bannerImage"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@mipmap/join_brand_banner"
                        android:layout_width="match_parent"
                        app:layout_constraintDimensionRatio="h,360:207"
                        android:layout_height="0dp"/>
                    <TextView
                        android:paddingStart="@dimen/dimen14"
                        android:paddingEnd="@dimen/dimen14"
                        android:gravity="center"
                        android:background="@mipmap/wenan_bg"
                        android:text="越早驻入 越快赚钱"
                        android:textSize="@dimen/dimen16"
                        android:textColor="@android:color/white"
                        app:layout_constraintTop_toTopOf="@+id/bannerImage"
                        app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:background="@drawable/join_brand_bannerbg"
                        android:layout_marginStart="@dimen/dimen15"
                        android:layout_marginEnd="@dimen/dimen15"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/bannerImage"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen10"
                        android:paddingTop="@dimen/dimen14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="平均品牌曝光率提高"
                            android:textColor="#ff9a9a9a"
                            android:textSize="@dimen/dimen12"
                            />
                        <TextView
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="平均日店访客率提升"
                            android:textColor="#ff9a9a9a"
                            android:textSize="@dimen/dimen12"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:background="@drawable/join_brand_bannerbg2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/dimen10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="164.4%"
                            android:textColor="#057CE4"
                            android:textSize="@dimen/dimen18"

                            />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="164.4%"
                            android:textColor="#057CE4"
                            android:textSize="@dimen/dimen18"
                            />
                    </LinearLayout>

                    <TextView
                        android:paddingBottom="@dimen/dimen14"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*已驻入商家营销效果（誉都官方统计）"
                        android:textColor="#ff9a9a9a"
                        android:textSize="@dimen/dimen10"
                        />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:scaleType="centerCrop"
                        android:background="#FFE6E6E6"
                        app:layout_constraintTop_toTopOf="@+id/title"
                        app:layout_constraintBottom_toBottomOf="@+id/title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/title"
                        android:layout_width="@dimen/dimen96"
                        android:layout_marginEnd="@dimen/dimen10"
                        android:layout_height="@dimen/dimen1"/>

                    <View
                        android:scaleType="centerCrop"
                        android:background="#FFE6E6E6"
                        app:layout_constraintTop_toTopOf="@+id/title"
                        app:layout_constraintBottom_toBottomOf="@+id/title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/title"
                        android:layout_width="@dimen/dimen96"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_height="@dimen/dimen1"/>
                    <TextView
                        android:id="@+id/title"
                        android:drawablePadding="@dimen/dimen4"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/dimen14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="平台优势"
                        android:textColor="#343434"
                        android:textSize="@dimen/dimen14"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/dimen5"
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen23"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@mipmap/zhaoshangruzhu_tr"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintWidth_percent="0.47"
                            android:layout_width="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_height="0dp"/>
                        <TextView
                            android:id="@+id/tishengbaoguang"
                            android:paddingStart="@dimen/dimen15"
                            android:paddingTop="@dimen/dimen15"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_percent="0.53"
                            android:layout_height="wrap_content"
                            android:text="提升曝光"
                            android:textColor="#ff343434"
                            android:textSize="@dimen/dimen14"
                            />
                        <TextView
                            android:layout_marginEnd="@dimen/dimen34"
                            app:layout_constraintTop_toBottomOf="@+id/tishengbaoguang"
                            android:paddingStart="@dimen/dimen15"
                            android:paddingTop="@dimen/dimen15"
                            android:paddingBottom="@dimen/dimen15"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="0dp"
                            app:layout_constraintEnd_toEndOf="@+id/tishengbaoguang"
                            android:layout_height="wrap_content"
                            android:text="多平台流量引入，多维度曝光，引流快人一步"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/dimen12"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/dimen5"
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@mipmap/zhaoshangruzhu_tl"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintWidth_percent="0.47"
                            android:layout_width="0dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            android:layout_height="0dp"/>
                        <TextView
                            android:id="@+id/shuangxianggongying"
                            android:paddingEnd="@dimen/dimen15"
                            android:paddingTop="@dimen/dimen15"
                            android:gravity="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_percent="0.53"
                            android:layout_height="wrap_content"
                            android:text="双向共赢"
                            android:textColor="#ff343434"
                            android:textSize="@dimen/dimen14"
                            />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@+id/shuangxianggongying"
                            android:paddingEnd="@dimen/dimen15"
                            android:paddingTop="@dimen/dimen15"
                            android:paddingBottom="@dimen/dimen15"
                            android:gravity="end"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="0dp"
                            android:layout_marginStart="@dimen/dimen34"
                            app:layout_constraintStart_toStartOf="@+id/shuangxianggongying"
                            android:layout_height="wrap_content"
                            android:text="多平台流量引入，多维度 曝光，引流快人一步"
                            android:textColor="#9A9A9A"
                            android:textSize="@dimen/dimen12"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <include
                    android:id="@+id/shangjiaForm"
                    android:layout_marginStart="@dimen/dimen15"
                    android:layout_marginEnd="@dimen/dimen15"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_jiameng_form"/>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
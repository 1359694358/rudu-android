<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="goods"
            type="com.rd.rudu.bean.result.JoinGoodsResultBean.JoinGoodsResultItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            clickOpenUrl="@{goods.detailUrl}"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:paddingEnd="@dimen/dimen9"
            android:paddingBottom="@dimen/dimen7"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/logoContainer"
                android:layout_marginStart="@dimen/dimen9"
                app:cardCornerRadius="@dimen/dimen6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/dimen120"
                android:layout_height="@dimen/dimen120">
                <ImageView
                    android:scaleType="fitXY"
                    url="@{goods.imageUrl}"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/join_mall_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/logoContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/logoContainer"
                android:layout_marginStart="@dimen/dimen13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="风景动物现代家居三联画沙发背景墙装饰画简约晶瓷..."
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/priceInfo"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_height="wrap_content"
                android:text="誉都商城专注建材家居，品质保证。"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>